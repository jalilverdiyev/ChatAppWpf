<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Border" x:Key="MessageBorder">
        <Style.Setters>
            <Setter Property="Margin" Value="10 0 0 0"></Setter>
            <Setter Property="CornerRadius" Value="15 15 15 0"></Setter>
            <Setter Property="Background" Value="#161616"></Setter>
        </Style.Setters>
    </Style>
    <Style TargetType="TextBlock" x:Key="MessageText">
        <Style.Setters>
            <Setter Property="TextWrapping" Value="Wrap"></Setter>
            <Setter Property="Foreground" Value="#FFFFFF"></Setter>
            <Setter Property="FontSize" Value="14"></Setter>
            <Setter Property="Margin" Value="10 "></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
        </Style.Setters>
    </Style>
    <Style TargetType="Label" x:Key="MessageFooter">
        <Style.Setters>
            <Setter Property="Foreground" Value="#FFFFFF"></Setter>
            <Setter Property="FontSize" Value="12"></Setter>
            <Setter Property="Margin" Value="40 0 0 0 "></Setter>
        </Style.Setters>
    </Style>

</ResourceDictionary>
